<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.XslSchoolMessageMapper">
    <resultMap id="BaseResultMap" type="pojo.XslSchool">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="schoolName" property="schoolname" jdbcType="VARCHAR"/>
        <result column="province" property="province" jdbcType="VARCHAR"/>
    </resultMap>
    <!--<sql id="Base_Column_List" >-->
    <!--schoolName-->
    <!--</sql>-->
    <select id="selectByXslSchool" resultType="String">
        select
           schoolName
        from xsl_school
    </select>

    <select id="selectSchoolList" resultType="pojo.XslSchool">
        select
           id, schoolName
        from xsl_school
    </select>


    <select id="selectBySchoolName" resultType="java.lang.Integer" parameterType="java.lang.String">
        select
           id
        from xsl_school
        where
           schoolName=#{schoolName}
    </select>

</mapper>